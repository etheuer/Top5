!!! 5
%html
%head
	%title= full_title(content_for :title)
	= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true	
	= javascript_include_tag "application", "data-turbolinks-track" => true, :cache => true
	= stylesheet_link_tag "application", "custom-theme/jquery-ui-1.8.9.custom" 
	= javascript_include_tag :defaults, "jquery-ui-#.#.#.custom.min", "autocomplete-rails"
	= csrf_meta_tags
%body
	%nav.navbar.navbar-default
		.container
			.navbar-brand= link_to "Top 5", root_path

			- if user_signed_in?
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "New List", new_list_path
					%li= link_to "Account", edit_user_registration_path
					%li= link_to "Sign Out", destroy_user_session_path, method: :delete
			-else
				%ul.nav.navbar-nav.navbar-right	
					%li= link_to "Sign Up", new_user_registration_path
					%li= link_to "Sign In", new_user_session_path
	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "altert alert-info"
		= yield
